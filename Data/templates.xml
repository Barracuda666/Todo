<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

  <!-- /*******************/ CUSTOM TEMPLATES /*************************/ -->

  <!-- nice icon button template -->
  <Button name="Nys_ToDoListIconButtonTemplate" virtual="true">
    <NormalTexture file="Interface\Buttons\UI-SquareButton-Up" desaturated="true">
      <Color r="0.75" g="0.75" b="0.75"/>
    </NormalTexture>
    <PushedTexture file="Interface\Buttons\UI-SquareButton-Down" desaturated="true">
      <Color r="0.75" g="0.75" b="0.75"/>
    </PushedTexture>
    <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD" alpha="0.75">
      <Anchors>
        <Anchor point="TOPLEFT" x="2" y="-2"/>
        <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
      </Anchors>
    </HighlightTexture>
  </Button>

  <Frame name="IconButtonPositionScripts" virtual="true">
    <!-- icon position adaptation scripts -->
    <Scripts>
      <OnMouseDown>
        <!-- nudge and dim the icon down a little -->
        local xOffset = -1;
        if (self.name == "UndoButton") then xOffset = -2; end

        local yOffset = -2;
        if (self.name == "UndoButton") then yOffset = -3; end
        if (self.name == "CategoryButton") then yOffset = -3; end

        self.Icon:SetPoint("CENTER", xOffset, yOffset) self.Icon:SetAlpha(0.5)
      </OnMouseDown>
      <OnMouseUp>
        <!-- reset the icon's position and opacity -->
        local xOffset = 0;
        if (self.name == "UndoButton") then xOffset = -0.5; end

        local yOffset = 0;
        if (self.name == "UndoButton") then yOffset = -0.5; end
        if (self.name == "CategoryButton") then yOffset = -1; end

        self.Icon:SetPoint("CENTER", xOffset, yOffset) self.Icon:SetAlpha(1)
      </OnMouseUp>
      <OnShow>
        <!-- reset the icon's position and opacity -->
        local xOffset = 0;
        if (self.name == "UndoButton") then xOffset = -0.5; end

        local yOffset = 0;
        if (self.name == "UndoButton") then yOffset = -0.5; end
        if (self.name == "CategoryButton") then yOffset = -1; end

        self.Icon:SetPoint("CENTER", xOffset, yOffset) self.Icon:SetAlpha(1)
      </OnShow>
    </Scripts>
  </Frame>

  <Frame name="IconButtonTooltipScripts" virtual="true">
    <Frames>
      <!-- small tooltip frame to describe use of the buttons -->
      <Frame parentKey="MiniTooltip" frameStrata="TOOLTIP" hidden="true">
        <Size x="0" y="26"/>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
          <TileSize val="16"/>
          <EdgeSize val="16"/>
          <BackgroundInsets>
            <AbsInset left="2" right="2" top="2" bottom="2"/>
          </BackgroundInsets>
          <Color r="0.05" g="0.05" b="0.05"/>
          <BorderColor r="0.5" g="0.5" b="0.5"/>
        </Backdrop>
        <Layers>
          <Layer level="ARTWORK">
            <FontString parentKey="Text" inherits="GameFontNormalSmall"/>
          </Layer>
        </Layers>
      </Frame>
    </Frames>

    <!-- Tooltip associated scripts -->
    <Scripts>
      <OnEnter>
        <!-- Show and reposition the tooltip -->
        self.MiniTooltip.Text:SetText(self.tooltip)
        self.MiniTooltip:SetWidth(self.MiniTooltip.Text:GetStringWidth()+16)
        if (self.name == "AddButton") then
          self.MiniTooltip:SetPoint("BOTTOMRIGHT", self, "TOPLEFT", -3, 7)
        else
          self.MiniTooltip:SetPoint("RIGHT", self, "LEFT", 0, 0)
        end
        self.MiniTooltip:Show()
      </OnEnter>
      <OnLeave>
        <!-- Hide the tooltip -->
        self.MiniTooltip:Hide()
      </OnLeave>
    </Scripts>
  </Frame>

  <!-- Category button -->
  <Button name="CategoryButton" inherits="Nys_ToDoListIconButtonTemplate, IconButtonTooltipScripts, IconButtonPositionScripts" virtual="true">
    <Size x="32" y="32"/>
    <KeyValues>
      <KeyValue key="tooltip" value="locale"/>
      <KeyValue key="name" value="CategoryButton"/>
    </KeyValues>
    <Layers>
      <Layer level="OVERLAY">
        <FontString parentKey="Icon" font="Fonts\FRIZQT__.TTF" inherits="GameFontNormalLarge" text="+">
          <FontHeight val="22"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Button>

  <!-- Undo button -->
  <Button name="UndoButton" inherits="Nys_ToDoListIconButtonTemplate, IconButtonTooltipScripts, IconButtonPositionScripts" virtual="true">
    <Size x="32" y="32"/>
    <KeyValues>
      <KeyValue key="tooltip" value="locale"/>
      <KeyValue key="name" value="UndoButton"/>
    </KeyValues>
    <Layers>
      <Layer level="OVERLAY">
        <Texture parentKey="Icon" file="Interface\Buttons\UI-RefreshButton">
          <Size x="14" y="14"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
  </Button>

  <!-- Options button -->
  <Button name="OptionsButton" inherits="Nys_ToDoListIconButtonTemplate, IconButtonTooltipScripts, IconButtonPositionScripts" virtual="true">
    <Size x="32" y="32"/>
    <KeyValues>
      <KeyValue key="tooltip" value="locale"/>
      <KeyValue key="name" value="OptionsButton"/>
    </KeyValues>
    <Layers>
      <Layer level="OVERLAY">
        <Texture parentKey="Icon" file="Interface\Buttons\UI-OptionsButton">
          <Size x="14" y="14"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
  </Button>

  <!-- Close button -->
  <Button name="CloseButton" inherits="Nys_ToDoListIconButtonTemplate, IconButtonPositionScripts" virtual="true">
    <Size x="25" y="25"/>
    <KeyValues>
      <KeyValue key="name" value="CloseButton"/>
    </KeyValues>
    <Layers>
      <Layer level="OVERLAY">
        <Texture parentKey="Icon" file="Interface\Buttons\UI-StopButton">
          <Size x="14" y="14"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
  </Button>

  <!-- Remove button -->
  <Button name="RemoveButton" inherits="InlineHyperlinkFrameTemplate, IconButtonPositionScripts" virtual="true">
    <Size x="13" y="13"/>
    <KeyValues>
      <KeyValue key="name" value="RemoveButton"/>
    </KeyValues>
    <Layers>
      <Layer level="OVERLAY">
        <Texture parentKey="Icon" file="Interface\Buttons\UI-StopButton">
          <Size x="14" y="14"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
  </Button>

  <!-- Add button -->
  <Button name="AddButton" inherits="IconButtonTooltipScripts, InlineHyperlinkFrameTemplate, IconButtonPositionScripts" virtual="true">
    <Size x="12" y="12"/>
    <KeyValues>
      <KeyValue key="tooltip" value="locale"/>
      <KeyValue key="name" value="AddButton"/>
    </KeyValues>
    <Layers>
      <Layer>
        <FontString parentKey="Icon" font="Fonts\FRIZQT__.TTF" inherits="GameFontNormalLarge" text="+">
          <FontHeight val="22"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Button>

  <!-- Show edit box button -->
  <Button name="ShowBoxButton" inherits="IconButtonPositionScripts" virtual="true">
    <Size x="15" y="15"/>
    <Layers>
      <Layer level="OVERLAY">
        <Texture parentKey="Icon" file="Interface\MINIMAP\SuperTrackerArrow">
          <Size x="28" y="28"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
  </Button>

</Ui>
